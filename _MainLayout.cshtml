<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FurnitureHub</title>
    <!--Link To Css-->
    
    <link rel="stylesheet" href="/css/style1.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    
    <style>
        .green_color {
            color: green;
        }

      
        .btn-custom {
            border: none; /* Remove the border */
            background-color: transparent; /* Remove any background color */
            padding: 0; /* Remove padding if not needed */
        }

        .badge {
            position: absolute;
            top: -12px;
            right: -12px;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 4px 8px;
            font-size: 10.5px;
            min-width: 20px;
            text-align: center;
        }

        .fa-shopping-cart {
            font-size: 32px;
            position: relative;
        }

        .footer-box.contact-info span {
            display: block;
            margin: 5px 0;
        }

        .footer-box.contact-info a {
            color: inherit; /* Ensure the link color matches the other contact details */
            text-decoration: none; /* Remove underline */
        }

            .footer-box.contact-info a:hover {
                color: #007BFF; /* Optional: Change color on hover */
            }
    </style>

  

    <!--Box Icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    
</head>
<body>
    <header>
        <a href="#" class="logo">Furniture<span>Hub</span></a>
        <div class="bx bx-menu" id="menu-icon"></div>

        <ul class="navbar">
            <li><a href="/Customer/Home/Index">Home</a></li>
            <li><a href="/Customer/Home/AllProducts">Products </a></li>
          
            <li><a href="/Customer/Home/AboutUs">AboutUs</a></li>
            <li><a href="/Admin/Category/Index">Dashboard</a></li>

            @if (User.Identity.IsAuthenticated)
            {
                <li><span>Welcome, @User.Identity.Name.Split('@')[0]</span></li>
                <li><a href="/User/Account/SignOut">Sign Out</a></li>

                <form asp-action="Index" asp-controller="Cart" asp-area="Customer" method="post">
                    <button type="submit" class="btn-custom">
                        <i class='fa fa-shopping-cart green_color fa-5x'></i>
                        <span id="cartBadgeCount" class="badge">@Model.CartItemCount</span>
                    </button>
                </form>
            }
            else
            {
                <li><a href="/User/Account/Register">Register</a></li>
                <li><a href="/User/Account/Login">Sign In</a></li>
                @* Set CartItemCount to zero for signed-out users *@
                {
                    Model.CartItemCount = 0;
                }

                <form asp-action="Index" asp-controller="Cart" asp-area="Customer" method="post">
                    <button type="submit" class="btn-custom">
                        <i class='fa fa-shopping-cart green_color fa-5x'></i>
                        <span id="cartBadgeCount" class="badge">@Model.CartItemCount</span>
                    </button>
                </form>
            }



         

     
        </ul>
    </header>

   
    <!--Home-->
    <section class="home" id="home">
        <div class="home-text">
            <h1><Span>Make</Span>Your Comfort <br> Is Our <span>Happiness</span></h1>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. <br> Dolores veritatis ad blanditiis molestias sunt aspernatur.</p>
            <a href="/Customer/Home/AllProducts" class="btn">Shop Now</a>
        </div>
    </section>
    @RenderBody()
    <section class="about" id="about">
        <div class="about-img">
            <img src="/img/about.jpg" alt="">
        </div>
        <div class="about-text">
